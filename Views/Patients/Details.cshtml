@model AppointmentMVC.ViewModels.PatientsAppoViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Patient Details </h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.DateOfBirth)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.DateOfBirth)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Patient.PhoneNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Patient.PhoneNumber)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Patient.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
<br/>
<hr />
<h1>Appoiments scheduled</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Doctor Name
            </th>
            <th>
                date of birth
            </th>
            <th>
                Duration By Minuts
            </th>
            <th>
                upcoming appointment
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.appoViewModelss)
        {
            <tr>
                <td>
                    @item.Patient.Name
                </td>
                <td>
                    @item.Patient.DateOfBirth

                </td>
                <td>
                    @item.DurationByMinuts
                </td>
                <td>
                    @item.AppoDateTime
                </td>
                <td>
                    @item.Status
                </td>
            </tr>
        }


    </tbody>
</table>

